<!DOCTYPE html>
<html>
  <style media="screen">
    table, input {
      margin: 0 auto;
      border: 1px solid gray;
    }

    input {
      margin: 0 auto;
      border: 1px solid gray;
      border-radius: 5px;
      padding: 5px;
    }

    #btn_form {
      padding: 5px;
    }

    #tabela {
      margin: 0 auto;
    }

    #tabela, #tr-tabela, #td-tabela {
      text-align: center;
      border-collapse: collapse;
      border-radius: 5px;
      padding: 5px;
    }

    #tr-tabela:nth-child(even){background-color: #f2f2f2}

    th {
      background-color: #0083BB;
      color: white;
      padding: 5px;
    }

  </style>
  <head>
    <meta charset="utf-8">
    <title>Banco de Dados</title>
  </head>
  <body>
    <form action="/api/usuarios" method="post">
      <table>
        <th colspan="2">Salvar no Banco de Dados</th>
        <tr>
          <td><label for="nome">Nome</label></td>
          <td><input type="text" name="nome" autocomplete="off"></td>
        </tr>
        <tr>
          <td><label for="nome">Login</label></td>
          <td><input type="text" name="login" autocomplete="off"></td>
        </tr>
        <tr>
          <td><label for="nome">Senha</label></td>
          <td><input type="text" name="senha" autocomplete="off"></td>
        </tr>
        <tr>
          <td><button type="submit" name="button" id="btn_form">Enviar</button></td>
        </tr>
      </table>
    </form>
    <br>
    <table id="tabela">
      <tr id="tr-tabela">
        <th>Nome</th>
        <th>Login</th>
        <th>Senha</th>
        <th></th>
        <th></th>
      </tr>
      <% for(var i = 0; i < dados.length; ++i) { %>
        <tr id="tr-tabela">
          <td id="td-tabela"><%= dados[i].nome %></td>
          <td id="td-tabela"><%= dados[i].login %></td>
          <td id="td-tabela"><%= dados[i].senha %></td>
          <td id="td-tabela"><a href="/api/usuarios/<%= dados[i]._id %>"><button type="button" name="button">Deletar</button></a></td>
          <td id="td-tabela"><a href="/api/usuarios/modificar/<%= dados[i]._id %>"><button type="button" name="button">Modificar</button></a></td>
        </tr>
      <% } %>
    </table>
  </body>
</html>
